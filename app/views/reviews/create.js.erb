function refreshForm(innerHTML) {
  const form = document.getElementById('new_review');
  form.innerHTML = innerHTML;
}

function addReview(review) {
  const reviews = document.getElementById('reviews');
  reviews.insertAdjacentHTML('beforeend', review);
}

<% if @review.errors.any? %>
  refreshForm('<%= j render "reviews/form", booking: @booking, review: @review %>');
<% else %>
  addReview('<%= j render "reviews/show", review: @review %>');
  refreshForm('<%= j render "reviews/form", booking: @booking, review: Review.new %>');
<% end %>
